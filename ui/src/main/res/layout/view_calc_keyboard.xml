<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keyboard_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:showIn="@layout/calculactor_linear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/btn_clear"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/btn_clear" />

        <TextView
            android:id="@+id/btn_change_sign"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/btn_plus_minus" />

        <TextView
            android:id="@+id/btn_percent"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/btn_percent" />

        <TextView
            android:id="@+id/btn_divide"
            style="@style/CalculatorButton.Operation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/btn_divide" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/btn_7"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7" />

        <TextView
            android:id="@+id/btn_8"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="8" />

        <TextView
            android:id="@+id/btn_9"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="9" />

        <TextView
            android:id="@+id/btn_multiply"
            style="@style/CalculatorButton.Operation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/btn_multiply" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/btn_4"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="4" />

        <TextView
            android:id="@+id/btn_5"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5" />

        <TextView
            android:id="@+id/btn_6"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="6" />

        <TextView
            android:id="@+id/btn_minus"
            style="@style/CalculatorButton.Operation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/btn_1"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1" />

        <TextView
            android:id="@+id/btn_2"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="2" />

        <TextView
            android:id="@+id/btn_3"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="3" />

        <TextView
            android:id="@+id/btn_plus"
            style="@style/CalculatorButton.Operation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/btn_0"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0" />

        <TextView
            android:id="@+id/btn_dot"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="." />

        <TextView
            android:id="@+id/btn_del"
            style="@style/CalculatorButton.Numeric"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="del" />

        <TextView
            android:id="@+id/btn_equals"
            style="@style/CalculatorButton.Equals"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="=" />

    </LinearLayout>
</LinearLayout>