<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/expression_text"
        style="@style/TextAppearance.InputField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:text="59รท12" />

    <TextView
        android:id="@+id/result_text"
        style="@style/TextAppearance.InputField"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end|bottom"
        android:padding="16dp"
        android:textSize="32sp"
        tools:text="59.1485981" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/btn_clear" />

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/btn_plus_minus" />

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/btn_percent" />

            <TextView
                style="@style/CalculatorButton.Operation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/btn_divide" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="7" />

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="8" />

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="9" />

            <TextView
                style="@style/CalculatorButton.Operation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="ร" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="4" />

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="5" />

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="6" />

            <TextView
                style="@style/CalculatorButton.Operation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/btn_1"
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1" />

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2" />

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="3" />

            <TextView
                android:id="@+id/btn_plus"
                style="@style/CalculatorButton.Operation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0" />

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="." />

            <TextView
                style="@style/CalculatorButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="del" />

            <TextView
                android:id="@+id/btn_eqauls"
                style="@style/CalculatorButton.Equals"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="=" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>